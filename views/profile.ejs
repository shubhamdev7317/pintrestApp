<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form id="upload-form" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center mt-20 justify-center">
        <div class="relative">
            <span id="upload-icon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200 ">
                <i class="ri-pencil-fill text-zinc-800"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-100 rounded-full overflow-hidden">
                <img class="h-full w-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
            </div>
        </div>
        <h1 class="text-2xl font-semibold mt-5">Shubham Singh</h1>
        <h3 class="text-md">@username</h3>
        <a href="/edit" class="px-7 mt-5 py-2 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a>
        <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-3">Add New Post</a>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 ">
        <div class="card">
            <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover " src="https://i.pinimg.com/564x/80/3a/22/803a22de4f7d152fde9599c7fb696e8c.jpg" alt="">
            </div>
            <h3 class="text-xl font-semibold mt-3">All Pins</h3>
            <h5 class="text-sm font-md opacity-80">28 Pins</h5>
        </div>
      
    </div>
</div>

<script>
document.querySelector("#upload-icon").addEventListener("click", function(){
  document.querySelector("#upload-form input").click();
});
document.querySelector("#upload-form input").addEventListener("change", function(){
    document.querySelector("#upload-form").submit();
})
</script>
<% include ./partials/footer.ejs %>


